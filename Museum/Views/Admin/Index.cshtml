<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Информация о мероприятиях
                </h1>
               
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start upcoming-exibition Area -->
<section class="upcoming-exibition-area section-gap">
    <div class="container">

        <div class="row">
            <div class="content">

                      
                            <table class="table table-hover table-condensed">
                                
                                <tr>
                                    <td><p>Название мероприятия</p></td>
                                    <td><p>Дата мероприятия</p></td>
                                    <td><p>Количество билетов</p></td>
                                    <td><p>Цена билетов</p></td>
                                    <td><p>Изменить данные</p></td>

                                </tr>

                                @foreach (var b in ViewBag.Events)
                                {
                                <tr>
                                    <td><p>@b.NameOfEvent</p></td>
                                    <td><p>@b.DateOfEvent</p></td>
                                    <td><p>@b.CountOfTickets</p></td>
                                    <td><p>@b.CostOfTicket</p></td>
                                    <td> @Html.ActionLink("Изменить","AddEvent")</td>
                                </tr>
                                }
                            </table>
                   
            </div>
        </div>


    </div>
</section>

@Html.ActionLink("Создать новое мероприятие","CreateEvent")
@Html.ActionLink("Информация о проданных билетах","PurchaseInfo")
