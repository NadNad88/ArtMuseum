@model Museum.Entities.Event


@{
    ViewBag.Title = "Добавление мероприятия";
}

<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Информация о мероприятиях
                </h1>

            </div>
        </div>
    </div>
</section>

<div id="AddEvent" style="margin-left:400px;">
    <h2>Добавить мероприятие</h2>


    @using (Html.BeginForm("AddEvent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <table>
        <tr>
            <td>Название мероприятия</td>
            <td>@Html.EditorFor(modelItem => modelItem.NameOfEvent)</td>
        </tr>
        <tr>
            <td>Дата мероприятия</td>
            <td>@Html.EditorFor(modelItem => modelItem.DateOfEvent)</td>
        </tr>
        <tr>
            <td>Описание</td>
            <td>@Html.EditorFor(modelItem => modelItem.Description)</td>
        </tr>
        <tr>
            <td>Количество билетов</td>
            <td>@Html.EditorFor(modelItem => modelItem.CountOfTickets)</td>
        </tr>
        <tr>
            <td>Цена билетов</td>
            <td>@Html.EditorFor(modelItem => modelItem.CostOfTicket)</td>
        </tr>
        <tr>
            <td>Изображение</td>
            <td><input type="file" name="file" /></td>
        </tr>
    </table>
        <input type="submit" value="Добавить" />
    }

</div>

<hr />
